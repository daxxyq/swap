{
  "author": "swapkit",
  "description": "SwapKit Lib cli",
  "dependencies": {
    "@inkkit/ink-divider": "1.0.1",
    "@inkkit/ink-form": "1.0.0",
    "@inkkit/ink-multi-select": "1.0.0",
    "@inkkit/ink-quicksearch-input": "1.0.2",
    "@inkkit/ink-select-input": "5.0.1",
    "@inkkit/ink-table": "1.0.0",
    "@inkkit/ink-text-input": "5.0.2",
    "@swapkit/core": "workspace:*",
    "@swapkit/sdk": "workspace:*",
    "@swapkit/tokens": "workspace:*",
    "@swapkit/wallet-keystore": "workspace:*",
    "ink": "4.4.1",
    "ink-spinner": "5.0.0",
    "react": "18.2.0",
    "terminal-size": "4.0.0",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@internal/config": "workspace:*",
    "@rollup/plugin-babel": "6.0.4",
    "@sindresorhus/tsconfig": "5.0.0",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@vitejs/plugin-react": "4.0.4",
    "@vitest/coverage-istanbul": "0.34.3",
    "vite": "4.4.9",
    "vite-plugin-babel": "1.1.3",
    "vitest": "0.34.3"
  },
  "eslintConfig": {
    "extends": "../../../internal/eslint-config"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "src/",
    "dist/"
  ],
  "homepage": "https://github.com/thorswap/SwapKit",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "swapkit-cli": "dist/index.js"
  },
  "module": "dist/index.js",
  "name": "@swapkit/cli",
  "publishConfig": {
    "access": "public"
  },
  "react-native": "src/index.ts",
  "repository": "https://github.com/thorswap/SwapKit.git",
  "scripts": {
    "build:vite": "vite build",
    "build": "tsc",
    "dev": "tsc && cd dist && node index.js",
    "clean": "rm -rf dist vite.config.ts.* .turbo node_modules",
    "lint": "eslint ./ --ext .ts,.tsx --fix; tsc --noEmit",
    "test": "echo 'vitest --run'",
    "test:coverage": "echo 'vitest run --coverage'"
  }
}
