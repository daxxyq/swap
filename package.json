  "name": "swapkit",
  "prettier": {
    "bracketSameLine": true,
    "bracketSpacing": true,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "pnpm": {
    "patchedDependencies": {
      "@ethersproject/abstract-signer@5.7.0": "patches/@ethersproject-abstract-signer-npm-5.7.0-f61d0a970e.patch",
      "cipher-base@1.0.4": "patches/cipher-base-npm-1.0.4-2e98b97140.patch",
      "sr25519@0.2.0": "patches/sr25519-npm-0.2.0-c9939c5c8a.patch",
      "typeforce@1.18.0": "patches/typeforce@1.18.0.patch",
      "asyncstorage-down@4.2.0": "patches/asyncstorage-down-npm-4.2.0-d323e014ba.patch"
    }
  },
  "scripts": {
    "build": "turbo run build --api=https://eu.trrc.ducktors.dev --team=team_thorswap --token=turbotoken-oss-europe1",
    "bump:development": "pnpm changeset && dotenv -- pnpm changeset version",
    "bump:release": "pnpm changeset pre exit && pnpm changeset && dotenv -- pnpm changeset version",
    "changelog": "pnpm changeset",
    "dev:android": "turbo run dev:android --concurrency=30 --filter=\"{./apps/expo-playground}...\"",
    "dev:ios": "turbo run dev:ios --concurrency=30 --filter=\"{./apps/expo-playground}...\"",
    "dev:expo": "turbo run dev --concurrency=30 --filter=\"{./apps/expo-playground}...\"",
    "dev:vite": "turbo run dev --concurrency=30 --filter=\"{./apps/vite-playground}...\"",
    "generate": "cd ./internal/generator; pnpm generate; cd ../..",
    "lint": "turbo run lint --api=https://eu.trrc.ducktors.dev --team=team_thorswap --token=turbotoken-oss-europe1",
    "publish-packages": "turbo run build lint --api=https://eu.trrc.ducktors.dev --team=team_thorswap --token=turbotoken-oss-europe1 && changeset version && changeset publish",
    "test": "dotenv -- turbo run test --api=https://eu.trrc.ducktors.dev --team=team_thorswap --token=turbotoken-oss-europe1",
    "clean": "turbo run clean",
    "bootstrap": "pnpm build lint test",
    "test:coverage": "dotenv -- turbo run test:coverage",
    "version-development": "dotenv -- pnpm changeset version",
    "version-release": "pnpm changeset pre exit && dotenv -- pnpm changeset version"
  },
