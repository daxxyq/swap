{
  "packageManager": "bun@1.0.1",
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@size-limit/file": "9.0.0",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "bun-types": "1.0.2",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "27.4.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "prettier": "3.0.3",
    "size-limit": "9.0.0",
    "turbo": "1.10.14",
    "typescript": "5.2.2"
  },
  "prettier": {
    "bracketSameLine": true,
    "bracketSpacing": true,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "bootstrap": "rm -rf node_modules; bun install; bun build",
    "build": "turbo run build --token=turbotoken-oss-europe1 --filter=\"!{./packages/swapkit/swapkit-sdk}...\"",
    "build:playground": "turbo run build-playground --token=turbotoken-oss-europe1 --concurrency=30",
    "build:sdk": "turbo run build --token=turbotoken-oss-europe1 --filter=\"{./packages/swapkit/swapkit-sdk}...\"",
    "clean": "turbo run clean",
    "dev:playground": "turbo run dev --concurrency=30 --filter=\"{./internal/playground}...\"",
    "generate": "cd ./internal/generator; bun generate; cd ../..",
    "lint": "turbo run lint --token=turbotoken-oss-europe1",
    "postinstall": "rm -rf ./.git/hooks/pre-commit ./.git/hooks/prepare-commit-msg",
    "preview": "turbo run preview-playground --token=turbotoken-oss-europe1 --concurrency=30",
    "publish-packages": "turbo run build lint --token=turbotoken-oss-europe1 && bun version-bump && bun changeset publish",
    "test": "turbo run test --token=turbotoken-oss-europe1",
    "test:coverage": "turbo run test:coverage",
    "version-bump": "bun changeset version"
  },
  "workspaces": [
    "internal/*",
    "packages/swapkit/*",
    "packages/toolboxes/*",
    "packages/wallets/*"
  ]
}
